GET     /                           controllers.Application.index()

GET     /words                      controllers.Application.listWords(p:Int ?= 0, s ?= "text", o ?= "asc", f ?= "")
GET     /words/new                  controllers.Application.newWord()
POST    /words/new                  controllers.Application.saveWord()
GET     /words/:id                  controllers.Application.editWord(id:Long)
POST    /words/:id                  controllers.Application.toggleRule(id:Long)
GET    /words/:id/delete           controllers.Application.deleteWord(id:Long)
GET     /changes                    controllers.Application.viewChanges()
POST    /changes                    controllers.Application.confirmChanges()
GET     /changes/cancel             controllers.Application.cancelChanges()
GET     /rules/new                  controllers.Application.newRule()
POST    /rules/new                  controllers.Application.saveRule()

GET     /assets/*file               controllers.Assets.at(path="/public", file)
